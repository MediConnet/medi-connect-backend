{
  "name": "medi-connect-backend",
  "version": "1.0.0",
  "description": "MediConnect Backend - Serverless Architecture on AWS",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:prisma && npm run build:ts && npm run build:layers",
    "build:prisma": "prisma generate",
    "build:ts": "tsc",
    "build:layers": "node scripts/build-layers.js",
    "package": "npm run build && node scripts/package.js",
    "upload": "node scripts/upload.js",
    "deploy": "npm run package && npm run upload && aws cloudformation deploy --template-file infrastructure/cloudformation/template.yaml --stack-name medi-connect-backend --capabilities CAPABILITY_IAM --parameter-overrides Stage=dev",
    "test": "ts-node test/main.ts",
    "dev": "nodemon --watch src --watch server --exec ts-node server/local.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "seed": "ts-node prisma/seed.ts"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [
    "serverless",
    "aws",
    "lambda",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.490.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@prisma/adapter-pg": "7.3.0",
    "@prisma/client": "7.3.0",
    "@types/aws-lambda": "^8.10.130",
    "@types/bcrypt": "6.0.0",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.6",
    "@types/node": "^22.0.0",
    "@types/pg": "8.16.0",
    "aws-sdk": "2.1693.0",
    "bcrypt": "6.0.0",
    "cors": "2.8.6",
    "dotenv": "^16.3.1",
    "express": "5.2.1",
    "nodemon": "3.1.11",
    "pg": "8.17.2",
    "prisma": "7.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0"
  }
}
