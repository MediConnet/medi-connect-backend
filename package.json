{
  "name": "medi-connect-backend",
  "version": "1.0.0",
  "description": "MediConnect Backend - Serverless Architecture on AWS",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:prisma && npm run build:ts && npm run build:layers",
    "build:render": "npm run build:prisma && npm run build:ts && node scripts/copy-prisma-client.js",
    "build:prisma": "prisma generate",
    "build:ts": "tsc",
    "build:layers": "node scripts/build-layers.js",
    "migrate:deploy": "prisma migrate deploy",
    "package": "npm run build && node scripts/package.js",
    "upload": "node scripts/upload.js",
    "deploy": "npm run package && npm run upload && aws cloudformation deploy --template-file infrastructure/cloudformation/template.yaml --stack-name medi-connect-backend --capabilities CAPABILITY_IAM --parameter-overrides Stage=dev",
    "test": "ts-node test/main.ts",
    "test:gmail": "ts-node test/test-gmail.ts",
    "test:mailjet": "ts-node test/test-mailjet.ts",
    "test:resend": "ts-node test/test-resend.ts",
    "test:email": "ts-node test/test-real-email.ts",
    "test:admin-users": "ts-node test/test-admin-users.ts",
    "create:clinic": "ts-node test/create-test-clinic.ts",
    "link:clinics": "ts-node test/link-clinics-to-users.ts",
    "clean:invitations": "ts-node test/clean-invitations.ts",
    "dev": "nodemon --watch src --watch server --exec ts-node server/local.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "seed": "ts-node prisma/seed.ts",
    "start": "node dist/index.js"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [
    "serverless",
    "aws",
    "lambda",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.490.0",
    "@prisma/adapter-pg": "7.3.0",
    "@prisma/client": "7.3.0",
    "@types/nodemailer": "7.0.9",
    "bcrypt": "6.0.0",
    "cors": "2.8.6",
    "dotenv": "16.6.1",
    "express": "5.2.1",
    "googleapis": "171.2.0",
    "node-mailjet": "6.0.11",
    "nodemailer": "7.0.13",
    "pg": "8.17.2",
    "postmark": "4.0.5",
    "prisma": "7.3.0",
    "resend": "6.9.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/bcrypt": "6.0.0",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.6",
    "@types/node": "^22.0.0",
    "@types/pg": "8.16.0",
    "aws-sdk": "1.18.0",
    "esbuild": "0.27.2",
    "nodemon": "3.1.11",
    "serverless": "4.31.2",
    "serverless-esbuild": "1.57.0",
    "serverless-offline": "14.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MediConnet/medi-connect-backend.git"
  },
  "bugs": {
    "url": "https://github.com/MediConnet/medi-connect-backend/issues"
  },
  "homepage": "https://github.com/MediConnet/medi-connect-backend#readme"
}
